@article{dahlof_prevention_2005,
	title = {Prevention of cardiovascular events with an antihypertensive regimen of amlodipine adding perindopril as required versus atenolol adding bendroflumethiazide as required, in the Anglo-Scandinavian Cardiac Outcomes Trial-Blood Pressure Lowering Arm ({ASCOT}-B},
	volume = {366},
	issn = {0140-6736},
