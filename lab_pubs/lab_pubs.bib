	number = {14},
	journaltitle = {Circulation},
	author = {Cook, N R and Paynter, N P and Eaton, C B and Manson, J E and Martin, L W and Robinson, J G and Rossouw, J E and Wassertheil-Smoller, S and Ridker, P M},
