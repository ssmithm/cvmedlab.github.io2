	number = {5},
	journaltitle = {{MMWR}. Surveillance Summaries},
	author = {Van Dyke, Miriam and Greer, Sophia and Odom, Erika and Schieb, Linda and Vaughan, Adam and Kramer, Michael and Casper, Michele},
	urldate = {2022-05-18},
	date = {2018-03-30},
	note = {Publisher: Centers for Disease Control and Prevention ({CDC})},
	file = {PDF:files/2980/full-text.pdf:application/pdf},
}

