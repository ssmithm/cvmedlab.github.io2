	date = {2013},
	note = {Place: Centre for Population Health Sciences, University of Edinburgh, Edinburgh, {UK}. Electronic address: gerry.fowkes@ed.ac.uk.},
	keywords = {Adult Age Distribution Aged Aged, 80 and over Ankl},
