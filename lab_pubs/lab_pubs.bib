	keywords = {ambulatory blood pressure, cost, economics, guidelines, home blood pressure monitor, treatment and diagnosis},
	file = {Full Text PDF:files/3361/Dietrich et al. - 2020 - Reimbursement of ambulatory blood pressure monitor.pdf:application/pdf;Snapshot:files/3362/jch.html:text/html},
