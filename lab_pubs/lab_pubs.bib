	journaltitle = {Frontiers in Cellular and Infection Microbiology},
	author = {Zhong, Hao-Jie and Zeng, Hong-Lie and Cai, Ying-Li and Zhuang, Yu-Pei and Liou, Yu-Ligh and Wu, Qingping and He, Xing-Xiang},
