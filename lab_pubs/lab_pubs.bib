	journaltitle = {Journal of the American College of Cardiology},
	author = {Rodrigues, Patrícia and Santos-Ribeiro, Samuel and Teodoro, Tiago and Gomes, Filipe Veloso and Leal, Inês and Reis, Jared P. and Goff, David C. and Gonçalves, Alexandra and Lima, João A.C.},
