	number = {13},
	journaltitle = {N Engl J Med},
	author = {Testa, M A and Anderson, R B and Nackley, J F and Hollenberg, N K},
	date = {1993},
	note = {Place: Department of Biostatistics, Harvard School of Public Health, Boston, {MA} 02115.},
