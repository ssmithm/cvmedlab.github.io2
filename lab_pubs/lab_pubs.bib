	number = {8},
	journaltitle = {J Am Coll Cardiol},
	author = {Bangalore, S and Gong, Y and Cooper-{DeHoff}, R M and Pepine, C J and Messerli, F H},
	date = {2014},
	note = {Place: Division of Cardiology, New York University School of Medicine, New York, New York. Electronic address: sripalbangalore@gmail.com.Department of Pharmacotherapy and Translational Research, University of Florida, College of Pharmacy, Gainesville, Florida.De},
	keywords = {Aged Aged, 80 and over Antihypertensive Agents/*th},
}

