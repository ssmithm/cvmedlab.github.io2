	number = {5},
	journaltitle = {Circulation Research},
	author = {Sharma, Ravindra K. and Yang, Tao and Oliveira, Aline C. and Lobaton, Gilberto O. and Aquino, Victor and Kim, Seungbum and Richards, Elaine M. and Pepine, Carl J. and Sumners, Colin and Raizada, Mohan K.},
