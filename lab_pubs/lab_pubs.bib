	urldate = {2021-10-24},
	date = {2016-12-01},
	pmid = {27856414},
	note = {Publisher: American Physiological Society Bethesda, {MD}},
	keywords = {Blood pressure, Autonomic function, Neural control of blood pressure, Sex differences},
	file = {PDF:/Users/stevensmith/Zotero/storage/MCQYE2XR/full-text.pdf:application/pdf},
}

