	number = {11},
	journaltitle = {The Journal of Clinical Hypertension},
	author = {Keeley, Ellen C. and Villanueva, Matthew and Chen, Yiqing E. and Gong, Yan and Handberg, Eileen M. and Smith, Steven M. and Pepine, Carl J. and Cooper‐{DeHoff}, Rhonda M.},
