	number = {17},
	journaltitle = {Arch Intern Med},
	author = {Fagard, R H and Staessen, J A and Thijs, L and Celis, H and Bulpitt, C J and de Leeuw, P W and Leonetti, G and Tuomilehto, J and Yodfat, Y},
