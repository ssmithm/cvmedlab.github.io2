	keywords = {adrenergic beta-antagonists, aldosterone antagonists, comparative effectiveness research, hypertension, safety},
	file = {Full Text PDF:files/3299/Desai et al. - 2022 - Comparative Safety and Effectiveness of Aldosteron.pdf:application/pdf},
