	author = {Seshasai, S R and Kaptoge, S and Thompson, A and Di Angelantonio, E and Gao, P and Sarwar, N and Whincup, P H and Mukamal, K J and Gillum, R F and Holme, I and Njolstad, I and Fletcher, A and Nilsson, P and Lewington, S and Collins, R and Gudnason, V and Thompson, S G and Sattar, N and Selvin, E and Hu, F B and Danesh, J},
	date = {2011},
	keywords = {Blood Glucose/*analysis Cause of Death Diabetes Me},
