	author = {Bangalore, S and Parkar, S and Messerli, F H},
	date = {2009},
	note = {Place: Department of Medicine, Division of Cardiology, St. Luke's Roosevelt Hospital and Columbia University College of Physicians and Surgeons, New York, {NY} 10019, {USA}.},
	keywords = {Aged Calcium Channel Blockers/*adverse effects/pha},
