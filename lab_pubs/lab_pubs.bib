@article{keeley_attended_2020,
	title = {Attended vs unattended systolic blood pressure measurement: A randomized comparison in patients with cardiovascular disease},
	volume = {22},
	rights = {All rights reserved},
	issn = {1524-6175},
	url = {https://onlinelibrary.wiley.com/doi/10.1111/jch.14037},
