	journaltitle = {Hypertension},
	author = {Investigators, Symplicity {HTN}-1},
	date = {2011},
	note = {Place: Centre of Cardiovascular Research and Education in Therapeutics, Department of Epidemiology and Preventive Medicine, School of Public Health and Preventive Medicine, Monash University/Alfred Hospital, Melbourne, Victoria 3004, Australia. henry.krum@med.mo},
	keywords = {Aged Analysis of Variance Blood Pressure Catheters},
