	note = {Place: Department of General Neurology, Hertie Institute for Clinical Brain Research, University of Tubingen, Hoppe-Seyler-Str. 3, 72076 Tubingen, Germany.},
	keywords = {Animals Brain Mapping Cerebral Cortex/*physiology},
}

