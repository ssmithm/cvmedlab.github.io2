	issue = {e1},
	journaltitle = {J Am Med Inform Assoc},
	author = {Mathias, J S and Agrawal, A and Feinglass, J and Cooper, A J and Baker, D W and Choudhary, A},
	date = {2013},
	note = {Place: Division of General Internal Medicine and Geriatrics, Feinberg School of Medicine, Northwestern University, Chicago, Illinois 60611, {USA}. j-mathias@md.northwestern.edu},
	keywords = {Aged Comorbidity *Data Mining Delivery of Health C},
}

