	number = {1},
	journaltitle = {Journal of the American Heart Association},
	author = {Smith, Steven M. and Huo, Tianyao and Delia Johnson, B. and Bittner, Vera and Kelsey, Sheryl F. and Vido Thompson, Diane and Noel Bairey Merz, C. and Pepine, Carl J. and Cooper‐{DeHoff}, Rhonda M.},
	urldate = {2022-11-27},
	note = {Publisher: American Heart Association},
	keywords = {hypertension, resistant hypertension, {WISE}, women},
	file = {Full Text PDF:files/3476/Smith et al. - Cardiovascular and Mortality Risk of Apparent Resi.pdf:application/pdf},
}

