	note = {Place: Division of General Internal Medicine, Brown University and Rhode Island Hospital, Providence, Rhode Island 02903, {USA}. Mark\_Schleinitz@Brown.edu},
	keywords = {Angina, Unstable Aspirin Cardiovascular Diseases C},
}

@article{tsioufis_pathophysiology_2011,
