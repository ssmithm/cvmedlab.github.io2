	number = {10},
	journaltitle = {Am J Med},
	author = {Bangalore, S and Makani, H and Radford, M and Thakur, K and Toklu, B and Katz, S D and {DiNicolantonio}, J J and Devereaux, P J and Alexander, K P and Wetterslev, J and Messerli, F H},
	date = {2014},
	note = {Place: New York University School of Medicine, New York, {NY}. Electronic address: sripalbangalore@gmail.com.St. Luke's Roosevelt Hospital, Mt. Sinai School of Medicine, New York, {NY}.New York University School of Medicine, New York, {NY}.Virginia Commonwealth Univer},
