	keywords = {Aged Aged, 80 and over Cohort Studies Dementia/*ch},
}

@article{muxfeldt_prevalence_2014,
	title = {Prevalence and associated factors of obstructive sleep apnea in patients with resistant hypertension},
	volume = {27},
	issn = {0895-7061},
