	number = {8},
	journaltitle = {Journal of General Internal Medicine},
	author = {Fontil, Valy and Bibbins-Domingo, Kirsten and Kazi, Dhruv S. and Sidney, Stephen and Coxson, Pamela G. and Khanna, Raman and Victor, Ronald G. and Pletcher, Mark J.},
	urldate = {2022-08-22},
