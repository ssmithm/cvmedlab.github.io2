	number = {16},
	journaltitle = {Eur Heart J},
	author = {Kumbhani, D J and Steg, P G and Cannon, C P and Eagle, K A and Smith, S C and Crowley, K and Goto, S and Ohman, E M and Bakris, G L and Perlstein, T S and Kinlay, S and Bhatt, D L and Investigators, {REACH} Registry},
