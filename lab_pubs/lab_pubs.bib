	journaltitle = {Am J Cardiovasc Drugs},
	author = {Dickson, M and Plauschinat, C A},
	date = {2008},
	note = {Place: College of Pharmacy, University of South Carolina, Columbia, South Carolina 29208, {USA}. Dickson@cop.sc.edu},
