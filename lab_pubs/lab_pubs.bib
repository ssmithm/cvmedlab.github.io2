	date = {2003},
	note = {Place: Division of Clinical and Administrative Pharmacy, College of Pharmacy, The University of Iowa, Iowa City, Iowa, {USA}. michael-ernst@uiowa.edu},
	keywords = {Adolescent Adult Aged Aged, 80 and over *Blood Pre},
}

@article{croog_effects_1986,
