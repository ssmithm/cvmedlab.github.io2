	author = {Heran, B S and Wong, M M and Heran, I K and Wright, J M},
	date = {2008},
	note = {Place: Department of Anesthesiology, Pharmacology and Therapeutics, University of British Columbia, 2176 Health Sciences Mall, Vancouver, British Columbia, Canada, V6T 1Z3. bsheran@ti.ubc.ca},
	keywords = {Angiotensin-Converting Enzyme Inhibitors/adverse e},
