@article{frazier_prevalence_2005,
	title = {Prevalence and management of hypertension in acute coronary syndrome patients varies by sex: observations from the Sibrafiban versus aspirin to Yield Maximum Protection from ischemic Heart events postacute {cOroNary} {sYndromes} ({SYMPHONY}) randomized clinical},
