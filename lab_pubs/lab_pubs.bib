	number = {11},
	journaltitle = {J Pediatr Surg},
	author = {Dotta, A and Rechichi, J and Campi, F and Braguglia, A and Palamides, S and Capolupo, I and Lozzi, S and Trucchi, A and Corchia, C and Bagolan, P and Orzalesi, M},
	date = {2005},
	note = {Place: Department of Medical and Surgical Neonatology-Bambino Gesu Children's Hospital, 00165 Rome, Italy. andreadotta@iol.it},
	keywords = {Brain/*blood supply Heart Rate Hernia, Diaphragmat},
