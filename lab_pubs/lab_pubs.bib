	number = {2},
	journaltitle = {Chest},
	author = {Sonnenblick, M and Friedlander, Y and Rosin, A J},
	date = {1993},
	note = {Place: Department of Geriatrics, Shaare Zedek Medical Center, Jerusalem, Israel.},
	keywords = {Adult Aged Aged, 80 and over *Benzothiadiazines Di},
}

