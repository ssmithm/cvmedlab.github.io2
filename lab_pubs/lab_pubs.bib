	journaltitle = {Cardiovascular Diabetology},
	author = {Dawwas, G.K. and Smith, S.M. and Park, H.},
	date = {2018},
	keywords = {{DPP}-4 inhibitors, {GLP}-1 agonists, Heart failure, Safety, Type 2 diabetes},
}

