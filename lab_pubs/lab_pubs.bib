	journaltitle = {J Womens Health (Larchmt)},
	author = {Johnson, S M and Karvonen, C A and Phelps, C L and Nader, S and Sanborn, B M},
	date = {2003},
	note = {Place: University of Texas Health Science Center at Houston, Houston, Texas, {USA}.},
	keywords = {Bibliometrics Cardiovascular Diseases/*therapy Cli},
