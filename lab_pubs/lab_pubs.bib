	date = {2012},
	note = {Place: Institute for Health Metrics and Evaluation, University of Washington, Seattle, {WA} 98121, {USA}. haidong@uw.edu},
	keywords = {Adolescent Adult Child Mortality/trends Child, Pre},
}

@article{libby_patient-level_2013,
