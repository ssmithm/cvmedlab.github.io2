	number = {7},
	journaltitle = {Clin Cardiol},
	author = {Zineh, I and Cooper-Dehoff, R M and Wessel, T R and Arant, C B and Sleight, P and Geiser, E A and Pepine, C J},
	date = {2005},
	note = {Place: Department of Pharmacy Practice, College of Pharmacy University of Florida, Gainesville, Florida 32610, {USA}.},
	keywords = {Aged Angiotensin-Converting Enzyme Inhibitors/ther},
}

@article{carter_cluster-randomized_2010,
