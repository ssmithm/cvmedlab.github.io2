	note = {Place: Hypertension and Cardiovascular Rehabilitation Unit, University of Leuven, B-3000 Leuven, Belgium. robert.fagard@uz.kuleuven.ac.be},
	keywords = {Aged Antihypertensive Agents/pharmacology/*therape},
