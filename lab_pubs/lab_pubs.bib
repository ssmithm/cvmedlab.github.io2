	author = {Mancia, G and Schumacher, H and Redon, J and Verdecchia, P and Schmieder, R and Jennings, G and Yusoff, K and Ryden, L and Liu, G L and Teo, K and Sleight, P and Yusuf, S},
	date = {2011},
	note = {Place: Clinica Medica, University of Milano-Bicocca, Ospedale San Gerardo, Monza, Italy. giuseppe.mancia@unimib.it},
