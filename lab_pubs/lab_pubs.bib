	journaltitle = {{BMC} Med Res Methodol},
	author = {Shrier, I and Platt, R W},
	date = {2008},
	note = {Place: Centre for Clinical Epidemiology and Community Studies, {SMBD}-Jewish General Hospital, {McGill} University, Montreal, {CanadaDepartment} of Epidemiology and Biostatistics, {McGill} University, Montreal, Canada},
}

