	pages = {1157--1165},
	number = {10},
	journaltitle = {Pharmacotherapy: The Journal of Human Pharmacology and Drug Therapy},
	author = {Smith, Steven M. and Anderson, Shawn D. and Wen, Sheron and Gong, Yan and Turner, Stephen T. and Cooper-{DeHoff}, Rhonda M. and Schwartz, Gary L. and Bailey, Kent and Chapman, Arlene and Hall, Karen L. and Feng, Hua and Boerwinkle, Eric and Johnson, Julie A. and Gums, John G.},
	urldate = {2022-11-27},
