	journaltitle = {Journal of Neurochemistry},
	author = {Reisenauer, Chris J. and Bhatt, Dhaval P. and Mitteness, Dane J. and Slanczka, Evan R. and Gienger, Heidi M. and Watt, John A. and Rosenberger, Thad A.},
