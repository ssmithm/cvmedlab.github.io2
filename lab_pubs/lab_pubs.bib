	number = {2},
	journaltitle = {Hypertension},
	author = {Thomas, G and Xie, D and Chen, H Y and Anderson, A H and Appel, L J and Bodana, S and Brecklin, C S and Drawz, P and Flack, J M and Miller  3rd, E R and Steigerwalt, S P and Townsend, R R and Weir, M R and Wright  Jr., J T and Rahman, M},
	date = {2016},
