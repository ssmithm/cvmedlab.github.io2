	number = {3},
	journaltitle = {Cardiovasc Ther},
	author = {Raebel, M A},
	date = {2012},
	note = {Place: Institute for Health Research, Kaiser Permanente Colorado, Denver, {CO} 80237, {USA}. Marsha.A.Raebel@kp.org},
	keywords = {Angiotensin {II} Type 1 Receptor Blockers/*adverse e},
}

@article{scheer_daily_2004,
	title = {Daily nighttime melatonin reduces blood pressure in male patients with essential hypertension},
