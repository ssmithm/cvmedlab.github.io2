	number = {3},
	journaltitle = {J Hypertens},
	author = {Ward, A M and Takahashi, O and Stevens, R and Heneghan, C},
	date = {2012},
	note = {Place: Department of Primary Care Health Sciences, The University of Oxford, Oxford, {UK}. alison.ward@phc.ox.ac.uk},
