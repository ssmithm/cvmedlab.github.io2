	date = {2014},
	note = {Place: Department of General Practice, {EES}, University of Tours, 10 Boulevard Tonnelle, {BP} 3223, 37032 Tours, Cedex 1, France. jean-pierre.lebeau@univ-tours.fr.},
	keywords = {Antihypertensive Agents/*therapeutic use *Clinical},
}

